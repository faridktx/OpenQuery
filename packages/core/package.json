{
  "name": "@openquery/core",
  "version": "0.0.1",
  "description": "Core logic for OpenQuery SQL Copilot",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "pnpm run build && pnpm run test:unit",
    "test:unit": "node --test dist/**/*.test.js",
    "test:integration": "pnpm run build && OPENQUERY_PG_INTEGRATION=1 node --test dist/db/__tests__/postgres.integration.test.js",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "better-sqlite3": "^11.0.0",
    "node-sql-parser": "^5.3.0",
    "openai": "^6.18.0",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/pg": "^8.11.0",
    "typescript": "^5.5.0"
  }
}
