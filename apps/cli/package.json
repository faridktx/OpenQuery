{
  "name": "@openquery/cli",
  "version": "0.0.1",
  "description": "OpenQuery CLI â€” local-first SQL Copilot",
  "type": "module",
  "files": [
    "dist"
  ],
  "bundleDependencies": [
    "@openquery/core"
  ],
  "bin": {
    "openquery": "dist/main.js",
    "oq": "dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "prepack": "pnpm run build && node scripts/prepack.mjs",
    "postpack": "node scripts/postpack.mjs",
    "typecheck": "tsc --noEmit",
    "dev": "node --loader ts-node/esm src/main.ts",
    "cli": "node dist/main.js",
    "test": "pnpm run test:unit",
    "test:unit": "pnpm run build && node --test test/unit.test.mjs",
    "test:integration": "pnpm run build && node --test test/integration.test.mjs",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@openquery/core": "workspace:*",
    "ajv": "^8.17.1",
    "better-sqlite3": "^11.0.0",
    "commander": "^12.0.0",
    "node-sql-parser": "^5.3.0",
    "openai": "^6.18.0",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "typescript": "^5.5.0"
  }
}
