{
  "name": "@faridktx/openquery-cli",
  "version": "0.5.1",
  "description": "OpenQuery CLI â€” local-first SQL Copilot",
  "type": "module",
  "files": [
    "dist"
  ],
  "bin": {
    "openquery": "dist/main.js",
    "oq": "dist/main.js"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "tsc && esbuild src/main.ts --bundle --platform=node --format=esm --target=node20 --outfile=dist/main.js --sourcemap --external:better-sqlite3 --external:pg --external:openai --external:ajv --external:node-sql-parser --external:commander",
    "prepack": "pnpm run build",
    "typecheck": "tsc --noEmit",
    "dev": "node --loader ts-node/esm src/main.ts",
    "cli": "node dist/main.js",
    "test": "pnpm run test:unit",
    "test:unit": "pnpm run build && node --test test/unit.test.mjs",
    "test:integration": "pnpm run build && node --test test/integration.test.mjs",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "better-sqlite3": "^11.0.0",
    "commander": "^12.0.0",
    "node-sql-parser": "^5.3.0",
    "openai": "^6.18.0",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@openquery/core": "workspace:*",
    "esbuild": "^0.25.0",
    "typescript": "^5.5.0"
  }
}
